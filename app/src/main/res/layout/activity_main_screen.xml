<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainScreen"
    android:longClickable="true"
    android:theme="@android:style/Theme.DeviceDefault"
    android:clickable="true">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_only_active_tasks"
        android:id="@+id/checkBox"
        android:clickable="true"
        android:enabled="true"
        android:checked="true"
        android:layout_below="@+id/imageButton3"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:longClickable="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:src="@drawable/ic_launcher"
        android:longClickable="true"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@color/background_material_light"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:text="EIS Groupâ„¢"
        android:id="@+id/textView2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton3"
        android:src="@drawable/cnt_button"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:longClickable="true"
        android:background="@color/background_material_light"
        android:visibility="visible"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/log_in"
        android:id="@+id/textView8"
        android:textAlignment="center"
        android:layout_below="@+id/imageButton2"
        android:textColor="#000000"
        android:layout_alignEnd="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton2" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/checkBox"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/textView2"
        android:longClickable="true" />

</RelativeLayout>
