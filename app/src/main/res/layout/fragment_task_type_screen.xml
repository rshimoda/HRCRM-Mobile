<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.eisgroup.hrcrm.TaskTypeScreen$PlaceholderFragment"
    style="@style/AppTheme">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Select Task Type: "
        android:id="@+id/textSelectTaskType"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/textSelectTaskType"
        android:layout_marginTop="54dp"
        android:layout_above="@+id/nextButton"
        android:layout_alignStart="@+id/nextButton">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Candidates"
            android:id="@+id/candidatesRadioButton"
            android:checked="false"
            android:onClick="CandidatesSelect" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marketing"
            android:id="@+id/marketingRadioButton"
            android:checked="false"
            android:onClick="MarketingSelect" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ODS Internal"
            android:id="@+id/odsInternalRadioButton"
            android:checked="false"
            android:onClick="ODSInternalSelect" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Performance Appraisals"
            android:id="@+id/paRadioButton"
            android:checked="false"
            android:onClick="PerformanceSelect" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recruitment"
            android:id="@+id/recruitmentRadioButton"
            android:checked="false"
            android:onClick="RecruitmentSelect" />

    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/nextButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="63dp"
        android:layout_gravity="center_horizontal"
        android:onClick="onClick" />

</RelativeLayout>
